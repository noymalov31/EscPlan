<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.esc_plan.esc_plan.MainActivity">

    <Button
        android:id="@+id/allRooms_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="50dp"
        android:text="All Rooms"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Recommended_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Recommended"
        android:layout_above="@+id/MyList_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/TODO_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="ToDo List"
        android:layout_above="@+id/MyList_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp" />

    <Button
        android:id="@+id/MyList_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/TODO_button"
        android:layout_alignStart="@+id/allRooms_button"
        android:layout_below="@+id/allRooms_button"
        android:layout_marginTop="30dp"
        android:text="My List" />

    <Button
        android:id="@+id/addRoom_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="23dp"
        android:text="Add Room"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/Recommended_button" />

    <Button
        android:id="@+id/myCal_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Calander"
        android:layout_alignTop="@+id/addRoom_button"
        android:layout_toEndOf="@+id/Recommended_button" />
</RelativeLayout>