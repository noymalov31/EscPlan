<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.esc_plan.escplan.MainActivity"
    android:background="@drawable/locked1">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:id="@+id/upbtn">
    <Button
        android:id="@+id/TODO_button"
        android:layout_width="155dp"
        android:layout_height="95dp"
        android:background="@drawable/todo_button1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="36dp" />

    <Button
        android:id="@+id/Recommended_button"
        android:layout_width="155dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/recommended_button1" />
</RelativeLayout>

    <Button
        android:id="@+id/MyList_button"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:background="@drawable/my_list_button2"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/upbtn"
        android:layout_alignEnd="@+id/upbtn"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignStart="@+id/upbtn" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/addRoom_button"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:background="@drawable/add_room_button1"
            android:layout_marginStart="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/allRooms_button"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:background="@drawable/all_rooms_button1"
            android:layout_marginBottom="22dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>